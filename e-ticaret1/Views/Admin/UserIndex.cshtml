@model IEnumerable<e_ticaret1.Models.User>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<ul style="justify-content:center; display:flex;" class="nav nav-tabs text-center">
    <li class="nav-item">
        <a class="nav-link" aria-current="page" href="~/Admin/UserIndex">Kullanıcılar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" aria-current="page" href="~/Admin/Index">Ürünler</a>
    </li>
</ul>

<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Aktiflik Durumu</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@(user.IsActive ? "Aktif" : "Pasif")</td>
                <td>@user.CreatedDate.ToString("d")</td> <!-- Tarih formatı -->
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
