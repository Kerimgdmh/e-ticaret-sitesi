@model e_ticaret1.Models.Product

@{
    ViewData["Title"] = "Ürün Sil";
}

<h1>@ViewData["Title"]</h1>

<h4>Silmek istediğiniz ürünü onaylayın:</h4>
<div>
    <h4>@Model.Name</h4>
    <p>Fiyat: @Model.Price.ToString("C")</p>
    <p>Açıklama: @Model.Description</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>
