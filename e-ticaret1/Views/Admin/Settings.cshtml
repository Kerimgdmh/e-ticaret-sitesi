</div>

@* Blog Yönetimi *@
<div class="form-section">
    <h2>Blog</h2>
    <form method="post" action="@Url.Action("UpdateBlog", "Admin")">
        @foreach (var blog in Model.Blogs)
        {
            <div class="form-group">
                <label>Blog Başlığı: </label>
                <input type="text" name="Blogs[@blog.Id].Title" value="@blog.Title" class="form-control" />
                <label>Blog İçeriği: </label>
                <textarea name="Blogs[@blog.Id].Content" class="form-control">@blog.Content</textarea>
            </div>
        }
        <button type="submit" class="btn btn-primary">Blogları Güncelle</button>
    </form>
</div>

@* Blog Footer Yönetimi *@
